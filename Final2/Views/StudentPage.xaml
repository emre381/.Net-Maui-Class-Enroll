<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final2.Views.StudentPage"
        
             
             Title="StudentPage"
             BackgroundColor="White"
      >

    <StackLayout Padding="10">
        <Frame CornerRadius="10" HasShadow="True" Padding="10" Margin="10">
            <StackLayout Padding="10">
                <Entry Placeholder="Student ID" Keyboard="Numeric" Text="{Binding Student.ID}" TextColor="Black"/>
                <Entry Placeholder="Name" Text="{Binding Student.Name}" TextColor="Black"/>
                <Entry Placeholder="Department" Text="{Binding Student.Department}" TextColor="Black"/>
                <Button Text="Next" Clicked="OnNextClicked" />
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>